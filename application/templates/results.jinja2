{% extends "base.html" %}
{% block body %}
    {{ super() }}
    <div class="jumbotron">

        {% if result_playlist %}
            <h2>These are recommended songs for you</h2>

            <div class="list-group" id="result-songs">
                {% for song in result_playlist %}
                    <a href="#" class="list-group-item">{{ song._title }} by <b>{{ song._artist }}</b></a>
                {% endfor %}
            </div>

        {% else %}
            <h1>We didnt find any suggestions :((</h1>
            <h2> Try adding new bands</h2>
        {% endif %}
        <a class="btn btn-lg btn-success" href="/" id="do-again-btn" role="button">Try again!</a>

    </div>
{% endblock %}