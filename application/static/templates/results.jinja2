{% extends "base.html" %}
{% block body %}
    {{ super() }}

    <div class="jumbotron">

        {% if results %}
            <h2>These are recommended songs for you</h2>

            <div class="list-group" id="result-songs">
                {% for song_id in results['result_playlist'] %}

                    <div class="result-song list-group-item">
                        <a href="#">{{ results['result_playlist'][song_id]['title'] }} by
                            <b>{{ results['result_playlist'][song_id]['artist_title'] }}</b></a>
                        <div class="preview-container" style="display: none;">
                            {% if results['result_playlist'][song_id]['preview_url'] %}
                                <audio controls='' name='media'>
                                    <source src=" {{ results['result_playlist'][song_id]['preview_url'] }} "
                                            type='audio/mpeg'>
                                </audio>
                            {% else %}
                                <h6>No preview for this song</h6>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>

        {% else %}
            <h1>We didn't find any suggestions :((</h1>
            <h2> Try adding new bands</h2>
        {% endif %}
        <a class="btn btn-lg btn-success" href="/" id="do-again-btn" role="button">Try again!</a>

    </div>
{% endblock %}
{% block footer %}
    {{ super() }}
    <script src="js/results.js"></script>

{% endblock %}