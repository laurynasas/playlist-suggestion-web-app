{% extends "base.html" %}
{% block body %}
    {{ super() }}
    <div class="jumbotron">

        {% if result_playlist %}
            <h2>These are recommended songs for you</h2>

            <div class="list-group" id="result-songs">
                {% for song in result_playlist %}
                    <div class="result-song list-group-item">
                        <a href="#" >{{ song.title }} by
                            <b>{{ song.artist_title }}</b></a>
                        <div class="preview-container" style="display: none;"></div>
                    </div>
                {% endfor %}
            </div>

        {% else %}
            <h1>We didnt find any suggestions :((</h1>
            <h2> Try adding new bands</h2>
        {% endif %}
        <a class="btn btn-lg btn-success" href="/" id="do-again-btn" role="button">Try again!</a>

    </div>
{% endblock %}
{% block footer %}
    {{ super() }}
    <script src="js/results.js"></script>

{% endblock %}